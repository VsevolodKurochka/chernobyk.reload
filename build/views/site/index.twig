{% import 'macros/macros.base.twig' as macros %}
{% extends 'layouts/base.twig' %}

{% block meta %}
	{% set title = 'ДЕНЕЖНАЯ ПРОГРАММА: ПЕРЕЗАГРУЗКА_' %}
	{% set description = 'Прокачай убеждения, которые помогут тебе выйти на желаемый уровень дохода' %}
	{% set image = 'img/logo.png' %}
	{% set url = 'url' %}
	{{ macros.meta(title, description, image, url) }}
	<link rel="icon" href="img/logo.png">
{% endblock %}

{% block css %}
	{{ macros.css('css/style.min.css') }}
{% endblock %}

{% block js %}
	{{ macros.js('js/vanilla.main.js') }}
{% endblock %}

{% block nav %}
{% endblock %}
{% block content %}
	{%
		set sections = [
			'greeting',
			'info',
			'speaker',
			'get',
			'modals'
		]
	%}
	{% for section in sections %}
		{% include "pages/index/#{section}.twig" %}
	{% endfor %}
{% endblock %}

{% block footer %}
{% endblock %}