{% import 'macros/macros.base.twig' as macros %}
{% extends 'layouts/base.twig' %}

{% block meta %}
	{% set title = 'Спасибо за регистрацию на курс “Бизнес-Разборы”' %}
	{% set description = 'Это был первый, и самый важный шаг на пути к умножению твоего дохода.' %}
	{% set image = '../img/logo.png' %}
	{% set url = 'url' %}
	{{ macros.meta(title, description, image, url) }}
	<link rel="icon" href="../img/logo.png">
{% endblock %}

{% block css %}
	{{ macros.css('../css/style.min.css') }}
{% endblock %}

{% block js %}
	{{ macros.js('../js/libs.min.js') }}
	{{ macros.js('../js/jquery.main.js') }}
	{{ macros.js('../js/vanilla.main.js') }}
{% endblock %}

{% block nav %}
{% endblock %}
{% block content %}
	{%
		set sections = [
			'greeting',
			'step',
			'bonus',
			'important',
			'question',
			'welcome'
		]
	%}
	{% for section in sections %}
		{% include "pages/thx/#{section}.twig" %}
	{% endfor %}
{% endblock %}

{% block footer %}
{% endblock %}