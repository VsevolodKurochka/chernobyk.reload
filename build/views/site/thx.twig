{% import 'macros/macros.base.twig' as macros %}
{% extends 'layouts/base.twig' %}

{% block meta %}
	{% set title = 'Спасибо за регистрацию на курс “Бизнес-Разборы”' %}
	{% set description = 'Это был первый, и самый важный шаг на пути к умножению твоего дохода.' %}
	{% set image = '../img/speaker.jpg' %}
	{% set url = 'url' %}
	{{ macros.meta(title, description, image, url) }}
	<link rel="icon" href="../img/logo.png">
{% endblock %}

{% block css %}
	{{ macros.css('../css/style.min.css') }}
{% endblock %}

{% block js %}
	{{ macros.js('../js/libs.min.js') }}
	{{ macros.js('../js/jquery.main.js') }}
	{{ macros.js('../js/vanilla.main.js') }}
{% endblock %}

{% block afterBody %}
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/ru_RU/sdk.js#xfbml=1&version=v3.1&appId=1783597268344606&autoLogAppEvents=1';
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
{% endblock %}

{% block nav %}
{% endblock %}

{% block content %}
	{%
		set sections = [
			'header',
			'large-video',
			'videos',
			'modals'
		]
	%}
	{% for section in sections %}
		{% include "pages/thx/#{section}.twig" %}
	{% endfor %}
{% endblock %}

{% block footer %}
{% endblock %}