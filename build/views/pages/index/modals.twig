{% import 'macros/macros.form.twig' as form %}
<div class="modal" id="modal-form">
	<div class="modal__box modal__box_default  modal__box_brand-2 modal__box_effect-2 ">
		<div class="modal__header">
			<p class="modal__title modal__title_white">Оставьте заявку</p>
			<button class="modal__close modal__close_white" data-close="modal">&times;</button>
		</div>
		<div class="modal__body">
			<form action="#" class="form form_block" method="POST">
				<div class="form__content">
					{{form.row('text', 'name', 'Ваше ФИО', 'img/icon-avatar.png')}}
					{{form.row('email', 'email', 'Ваш e-mail', 'img/icon-email.png')}}
					{{form.row('phone', 'phone', 'Ваш телефон', 'img/icon-phone.png')}}
					<div class="form__row form__row_submit text-center">
						{{ form.button('submit', 'form__submit btn btn_lg btn_shadow btn_brand-1 effect effect_bounce-top', 'Узнать стоимость') }}
					</div>
				</div>
			</form>
		</div>
	</div>
</div>