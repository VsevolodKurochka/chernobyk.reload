{% import 'macros/macros.landing.twig' as landing %}
{%
	set info = {
		"title": "ВАЖНО!",
		"subtitle": "ПОМИМО <b>УВЕЛИЧЕНИЯ ДОХОДА</b>,<br> УЧАСТНИКИ ИНТЕНСИВА<br> ПОЛУЧАЮТ <b>РЯД “ПОБОЧНЫХ<br> ЭФФЕКТОВ”</b>"
	}
%}
{%
	set steps_1 = [
		"Избавление от излишней импульсивности и медлительности в принятии решений",
		"Способность контролировать бизнес-процессы (маркетинг, продажи, работа с клиентами, производство, управление персоналом и т.д.)",
		"Обретение “нирваны” (долгожданной стабильности) в жизни, в работе и на банковском счету.",
		"Создание работающей стратегии масштабирования и развития бизнеса",
	]
%}
{%
	set steps_2 = [
		"Умение отличать выгодные бизнес-возможности от невыгодных",
		"Построение взаимовыгодной системы мотивации для команды: лучшие не уйдут, а ты не останешься в минусе.",
		"Избавление от внутренних ограничений “я не смогу” и умение добиваться результатов в короткие сроки.",
		"Способность сохранять и умножать результат в будущем самостоятельно, без поддержки тренеров."
	]
%}
<section class="important">
	<span class="important__rectangle important__rectangle_1"></span>
	<span class="important__rectangle important__rectangle_2"></span>
	<div class="container">
		{{
			landing.header(
				'important__header',
				{
					"text": info.title,
					"class": "important__title"
				},
				{
					"text": info.subtitle,
					"class": "important__subtitle"
				}
			)
		}}
		<div class="important__items row">
			<div class="col-12 col-md-6">
				<div class="row">
					{% set i = 0 %}
					{% for step in steps_1 %}
						{% set i = i + 1 %}
						<div class="important-step col-12 col-xs-6 col-md-5">
							<p class="important-step__number">+{{i}}</p>
							<div class="important-step__content">{{step|raw}}</div>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="col-12 col-md-6">
				<div class="row">
					{% set i = 4 %}
					{% for step in steps_2 %}
						{% set i = i + 1 %}
						<div class="important-step col-12 col-xs-6 col-md-5">
							<p class="important-step__number">+{{i}}</p>
							<div class="important-step__content">{{step|raw}}</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="important__footer">
			{{
				landing.button(
					'button',
					null,
					'Узнать о спецусловиях'
				)
			}}
		</div>
	</div>
</section>