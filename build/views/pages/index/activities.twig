{% import 'macros/macros.landing.twig' as landing %}
{%
	set info = {
		"title": "<b>КАК ПРОХОДЯТ</b><br>ЖИВЫЕ ЗАНЯТИЯ",
		"subtitle": "<span>LIVE</span>",
		"content": [
			"Раз в неделю тебе предстоит встречаться с тренерами и коллегами по курсу в уютном ресторане Киева.",
			"Виталий Бихунов и команда аттестованных бизнес-тренеров будут отмечать твой прогресс и делиться советами для достижения финансовой цели.",
			"Более того: делиться рекомендациями с тобой будут другие участники интенсива. Таким образом, ты получишь ценный брейншторм с множеством вариантов решений.",
			"К их помощи ты можешь обращаться в любое время через закрытый Telegram-чат."
		]
	}
%}
<section class="section activities">
	<img src="img/activities-img.jpg" alt="{{info.title|striptags}}" class="activities__image">
	<div class="container">
		<div class="row">
			<div class="col-12 col-sm-6">
				{{
					landing.header(
						'activities__header',
						{
							"text": info.title,
							"class": "activities__title"
						},
						{
							"text": info.subtitle,
							"class": "activities__subtitle"
						}
					)
				}}
				<div class="activities__body">
					<div class="activities__content">
						{% for p in info.content %}
							<p>{{p}}</p>
						{% endfor %}
					</div>
					{{
						landing.button(
							'button',
							'activities__button',
							'Забронировать место'
						)
					}}
				</div>
				
			</div>
		</div>
	</div>
</section>