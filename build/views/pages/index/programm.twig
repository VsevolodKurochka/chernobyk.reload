{% import 'macros/macros.landing.twig' as landing %}
{%
	set info = {
		"parallax": "img/iphone-7.png",
		"title": "<b>ПРОГРАММА</b><br> КУРСА"
	}
%}
{%
	set items = [
		{
			"image": "img/pr-1.jpg",
			"button": "Получить видеокурс",
			"button_status": true,
			"list": [
				"- Денежные сценарии: определи свой.",
				"- Как детство определяет наш будущий достаток.",
				"- Ожидание-реальность: почему ты не живешь жизнью, о которой мечтаешь.",
			]
		},
		{
			"image": "img/pr-2.jpg",
			"button": "Получить видеокурс",
			"button_status": false,
			"list": [
				"- Образ киногероя: почему мы ждём помощи извне.",
				"- Лучшие способы избавиться от органичивающих убеждений.",
				"- Сила маленьких решений."
			]
		},
		{
			"image": "img/pr-3.jpg",
			"button": "Получить видеокурс",
			"button_status": false,
			"list": [
				"- Кейсы учеников: путь к победе и малоизвестные детали.",
				"- Честная история провала и успеха Виталия Бихунова.",
				"- Заряд мотивации на пути к переменам."
			]
		},
		{
			"image": "img/pr-4.jpg",
			"button": "Получить видеокурс",
			"button_status": false,
			"list": [
				"- Пошаговый план достижения финансовой цели.",
				"- Сила окружения единомышленников.",
				"- Простой переход от программы “бедность” в программу “богатство”.",
			]
		}
	]
%}
<section class="programm">
	<img src="{{info.parallax}}" alt="{{info.title|raw}}" class="programm__parallax parallax-image">
	<div class="container">
		{{
			landing.header(
				'programm__header',
				{
					"text": info.title,
					"class": "programm__title"
				}
			)
		}}
		<div class="row">
			{% for item in items %}
				<div class="col-12 col-sm-6 col-md-3 programm-item">
					<div class="programm-item__header">
						<img src="{{item.image}}" alt="{{item.button}}">
					</div>
					<div class="programm-item__btn-outer">
						<button 
							type="button" 
							class="btn {{item.button_status ? 'btn_brand-1 btn_shadow' : ''}} effect effect_bounce-top programm-item__btn" 
							{% if item.button_status %} data-action="modal" data-open="#modal-form" {% else %} disabled="disabled" {% endif %}>Получить видеокурс</button>
					</div>
					<div class="programm-item__body">
						<ul class="programm-item__list">
							{% for li in item.list %}
								<li>{{li}}</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>