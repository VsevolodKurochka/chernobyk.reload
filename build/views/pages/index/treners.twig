{% import 'macros/macros.landing.twig' as landing %}
{%
	set info = {
		'title': "СЕРТИФИЦИРОВАННЫЕ ТРЕНЕРЫ KATANA GROUP",
		'subtitle': "ПОМОГЛИ УЖЕ СВЫШЕ",
		'number': '100+',
		'who': "ПРЕДПРИНИМАТЕЛЯМ<br>И ФРИЛАНСЕРАМ",
		'future': "<span class='b'>Перейти</span> на новый<br>уровень <span class='b'>заработка</span>"
	}
%}
{%
	set team = [
		{
			"name": "Дмитрий Гречко",
			"image": "img/team-1.png",
			"niche": [
				"производство скалодромов",
				"производство мебели"
			],
			"a": "3000",
			"b": "6000",
			"f": "7075"
		},
		{
			"name": "Чернобук Оксана",
			"image": "img/team-2.png",
			"niche": [
				"интернет-маркетинг"
			],
			"a": "1000",
			"b": "3000",
			"f": "3450"
		},
		{
			"name": "Павел Кравченко",
			"image": "img/team-3.png",
			"niche": [
				"производство моющих средств"
			],
			"a": "1100",
			"b": "1500",
			"f": "2500"
		},
		
		{
			"name": "Артем Бабурин",
			"image": "img/team-5.png",
			"niche": [
				"производство сумок"
			],
			"a": "600",
			"b": "1200",
			"f": "1200"
		},
		{
			"name": "Дмитрий Шабля",
			"image": "img/team-6.png",
			"niche": [
				"производство сцен"
			],
			"a": "3100",
			"b": "11 600",
			"f": "12 400"
		}
	]
%}
<section class="treners treners_negative">
	
	<div class="treners__info">
		<div class="treners__info-column treners__info-column_0">
			{{
				landing.header(
					'treners__header',
					{
						"text": info.title,
						"class": "treners__title"
					},
					{
						"text": info.subtitle,
						"class": "treners__subtitle"
					}
				)
			}}
		</div>
		<div class="treners__info-column treners__info-column_1">
			<p class="treners__number">{{info.number}}</p>
		</div>
		<div class="treners__info-column treners__info-column_2">
			<p class="treners__caption treners__caption_uppercase">{{info.who|raw}}</p>
			<p class="treners__caption treners__caption_large">{{info.future|raw}}</p>
		</div>
	</div>
	<div class="treners__container container">
		<div class="treners__carousel owl-carousel" id="treners-carousel">
			{% for trener in team %}
				<div class="treners-item">
					<p class="treners-item__name">{{trener.name}}</p>
					<div class="treners-item__header">
						<img src="{{trener.image}}" alt="{{trener.name}}">
					</div>
					<div class="treners-item__content">
						<p class="b">Ниша:</p>
						<ul class="list treners-item__list">
							{% for niche in trener.niche %}
								<li>{{niche}}</li>
							{% endfor %}
						</ul>
						<ul class="treners-item__prices">
							<li><span class="b">Точка А</span> — {{trener.a}} $</li>
							<li><span class="b">Точка Б</span> — {{trener.b}} $</li>
							<li><span class="b">Факт</span> — {{trener.f}} $</li>
						</ul>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>