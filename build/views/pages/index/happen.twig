{% import 'macros/macros.landing.twig' as landing %}
{%
	set steps = [
		"Ты ставишь амбициозную финансовую цель на 1 месяц (к примеру, удвоить доход или запустить бизнес)",
		"Получаешь детальный разбор твоего бизнеса (или бизнес-идеи) на первой живой встрече с тренерами. ",
		"Тестируешь стратегии, гипотезы, быстро избавляясь от неэффективных и грамотно развивая самые перспективные",
		"Отчитываешься о результатах на еженедельных живых встречах группы — и получаешь рекомандации от тренеров и коллег по обучению.",
		"Находишься в постоянной коммуникации с тренером, отправляя ему ежедневные отчеты и получая от него персональную обратную связь.",
		"Ежедневно улучшаешь финансовые показатели — и<br><br>ДОСТИГАЕШЬ ПОСТАВЛЕННОЙ ЦЕЛИ ЧЕРЕЗ 1 МЕСЯЦ!"
	]
%}
<section class="happen">
	<div class="container">
		{{
			landing.header(
				'happen__header',
				{
					"text": "<span class='b'>КАК ЭТО</span><br>ПРОИСХОДИТ",
					"class": "happen__title"
				}
			)
		}}
		<div class="row">
			{% set i = 0 %}
			{% for step in steps %}
				{% set i = i + 1 %}
				<div class="happen-step happen-step_{{i}} col-12 col-xs-6 col-md-4">
					<p class="happen-step__subtitle">Шаг</p>
					<p class="happen-step__number">0{{i}}</p>
					<div class="happen-step__content">{{step|raw}}</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>