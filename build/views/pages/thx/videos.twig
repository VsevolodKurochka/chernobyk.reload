{%
	set items = [
		{
			"image": "../img/thx-video-1.jpg",
			"text": "Видео 2"
		},
		{
			"image": "../img/thx-video-2.jpg",
			"text": "Видео 3"
		},
		{
			"image": "../img/thx-video-3.jpg",
			"text": "Видео 4"
		}
	]
%}
<section class="section videos">
	<div class="container">
		<div class="row">
			{% for item in items %}
				<div class="col-12 col-sm-4 videos-item">
					<div class="videos-item__header">
						<img src="{{item.image}}" alt="{{item.text}}" class="videos-item__image">
					</div>
					<p class="videos-item__title">{{item.text}}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</section>