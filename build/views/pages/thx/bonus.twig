{% import 'macros/macros.landing.twig' as landing %}
{% 
	set info = {
		"title": "*ТВОЙ <b>БОНУС</b>",
		"subtitle": "Оплати заявку в течение 3-х часов — и получи<br> бесплатное участие в 2-дневном живом тренинге<br> Виталия Бихунова “Денежное мышление”",
		"video": "gHk4qIgB9c4",
		"warning": "* если Вы уже оплатили, но еще не были на Тренинге “Денежное мышление”,<br>то сможете получить возврат средств, равный сумме оплаты тренинга"
	}
%}
<section class="section bonus">
	<div class="container">
		{{
			landing.header(
				'bonus__header',
				{
					"text": info.title,
					"class": "bonus__title"
				},
				{
					"text": info.subtitle,
					"class": "bonus__subtitle"
				}
			)
		}}
		<div class="bonus__video">
			<img src="../img/BONUS.png" alt="{{info.subtitle|striptags}}">
			<!-- <iframe src="https://www.youtube.com/embed/{{info.video}}?showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen class="bonus__video-iframe"></iframe> -->
		</div>
		<div class="bonus__footer">
			<p>{{info.warning|raw}}</p>
		</div>
	</div>
</section>